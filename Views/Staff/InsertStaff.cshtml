@model StaffRegister.Models.StaffProperty

@{
    ViewData["Title"] = "InsertStaff";
}

<h1>Insert a Staff</h1>

<h4>Staff Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertStaff">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StaffName" class="control-label"></label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffAge" class="control-label"></label>
                <input asp-for="StaffAge" class="form-control" />
                <span asp-validation-for="StaffAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffDesig" class="control-label"></label>
                <input asp-for="StaffDesig" class="form-control" />
                <span asp-validation-for="StaffDesig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffExp" class="control-label"></label>
                <input asp-for="StaffExp" class="form-control" />
                <span asp-validation-for="StaffExp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetStaffData">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
